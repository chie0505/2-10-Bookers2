
<h1>New book</h1>
<%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>


<h2>Books</h2>
  <thead>
    <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </thead>

<tbody>
 <% @books.each do |book| %>
   <tr>
     <td>
       <%= link_to user_path(book.user) do %>
 
       <!--link_toでリンク先URLを指定-->

       <% end %>
      </td>
     <td><%= link_to book.title, book_path(book.id) %></td>
     <td><%= book.body %></td>
    </tr>
 <% end %>
</tbody>
