<div class="container">
 <div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
   <h1>Editing Book</h1>
    <%= render 'books/error', model: @book %>
    <%= form_with model:@book, local:true do |f| %>
      <div class="form-group">
       <%= f.label:Title %></br>
       <%= f.text_field :title, :size=>"60" %>
      </div>

      <div class="form-group">
       <%= f.label:Opinion %></br>
       <%= f.text_area :body, :size=>"63x3"%>
      </div>

      <div class="form-group">
       <%= f.submit 'Update Book', class:"btn btn-success" %>
       <p><%= link_to "Show", book_path(@book.id) %> | <%= link_to "Back", books_path %></p>
      </div>
     <%end%>

   </div>
 </div>
</div>