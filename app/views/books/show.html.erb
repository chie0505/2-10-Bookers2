<div class="container">
 <div class="row">
  <%= render 'books/error', model: @book_new %>
  <div class="col-md-3">
  <%= render 'users/user', user: @user %>
  <%= render 'books/book', book: @book_new %>
 </div>
 <div class="col-md-8 offset-md-1">
  <table class="table book-index">
   <h2>Book detail</h2>
   <table class="table table-hover table-inverse">

    <tr>
      <td>
         <%= link_to user_path(@user.id) do %>
          <%= attachment_image_tag @book.user, :profile_image,:fill,50,50, fallback:"no_image.jpg",size:'50x50' %></br>
          <%= @book.user.name %>
         <%end%>

       <td><%= link_to @book.title, book_path(@book.id) %></td>
       <td><%= @book.body %></td>

       <% if @user.id == current_user.id %>
       <!--↑もし、投稿者 == 現在ログインしているユーザ だったら-->
       <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
       <td><%= link_to "Destroy", book_path(@book.id),  method: :delete, data:{ confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
        <% end %>
     </tr>
    </table>
   </table>
  </div>
 </div>
</div>






