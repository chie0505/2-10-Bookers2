<div class="container">
 <div class="row">

  <div class="col-md-3">
  <%= render 'users/user', user: @user %>
  <%= render 'books/book', book: @book %>
<!--↑テンプレート化　render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] %>-->
  </div>



<%= form_with model: @book, local:true do |f| %>


<% end %>



 <div class="col-md-8 offset-md-1">
   <table class="table book-index">
    <h2>Users</h2>
    　<thead>
          <th>image</th>
          <th>name</th>
          <th></th>
    　</thead>
        <tbody>
          <% @users.each do |user| %>
<tr>
	  	  	  <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50,fallback: "no_image.jpg"%></td>
	  	  	  <td><%= user.name %></td>
	  	  	  <td><%= link_to "Show", user_path(user) %></td>
	  	  	</tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>